                    <TextBox Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="67" Margin="12,10,0,0" TextWrapping="Wrap" Text="Puruthamtem Rathore" VerticalAlignment="Top" Width="230" FontSize="20"/>
                </Grid>
            </TabItem>
           <TabItem Header="Image">
                <Grid>
                    <Image Source="./Image/bongbay.jpg" Width="800" Height="300"/>
                </Grid>
            </TabItem>

            <TabItem Header="Hotels">
                <Grid>
                    <Image Source="./Image/hotel.jpg" Width="800" Height="300"/>
                </Grid>
            </TabItem>
            <TabItem Header="Contact us">
                <Grid Background="#FFE5E5E5" Margin="-19,0,187,149" Height="214">
                    <Label Content="Name:" HorizontalAlignment="Left" Height="27" Margin="91,29,0,0" VerticalAlignment="Top" Width="94"/>
