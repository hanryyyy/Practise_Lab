                <Grid Background="#FFE5E5E5" Margin="0,0,143,34" Height="338">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="27*"/>
                        <ColumnDefinition Width="157*"/>
                        <ColumnDefinition Width="605*"/>
